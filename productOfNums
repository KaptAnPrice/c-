//Product of Two Numbers

#include <iostream>
using namespace std;

int main() {
    
    float x,y;
    
    cout << " Enter two numbers : "<<endl;
    
    cin >> x >> y;
    
    
    float z = x*y;
    
    cout << "Prodcut = " << z <<endl;
    
   
    
}

//Size Of Data Types
#include<iostream>

using namespace std;

int main()
{
   
    int x,y,z,a;
    
    x = sizeof(char);
    a = sizeof(int);
    y = sizeof(float);
    z = sizeof(double);
    
    cout<< "Size of char   : " << x << " byte"<<endl;
    cout<< "Size of int    : " << a << " byte"<<endl;
    cout<< "Size of float  : " << y << " byte"<<endl;
    cout<< "Size of double : " << z << " byte"<<endl;
}
