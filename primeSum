#include<iostream>
using namespace std;
int prime(int);

int main(){
    int n,i,flag=0;
    
    cout<<"Enter a positive integer : ";
    cin>>n;
    
    for (i = 2; i <= n / 2; i++) {
         
           if (prime(i) == 1) {
               
               if (prime(n - i) == 1){
                   cout<< n << " = "<<i<<" + "<<(n-i)<<endl;
                   flag = 1;
               }
           }
       }
    if(flag==0){
        cout<<"Sum not possible";
    }
    
}

int prime(int n) {
    int i, isPrime = 1;
    for (i = 2; i <= n / 2; ++i) {
        if (n % i == 0) {
            isPrime = 0;
            break;
        }
    }
    return isPrime;
}
